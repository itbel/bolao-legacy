{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6",
            "esnext"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "es6",
        "watch": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}